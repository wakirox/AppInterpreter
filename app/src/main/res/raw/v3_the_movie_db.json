            "views": [
              {
                "type": "text",
                "title": "${title}${name}",
                "textStyle": "bold",
                "textSize": 10
              },
              {
                "id": "l12",
                "type": "layout",
                "orientation": "horizontal",
                "views": [
                  {
                    "type": "image",
                    "url": "https://image.tmdb.org/t/p/w500${poster_path}",
                    "size": {
                      "width": 141,
                      "height": 210
                    }
                  },
                  {
                    "type": "text",
                    "label": "Plot",
                    "mapping": "overview"
                  }
                ]
              },
              {
                "type": "button",
                "hideIfAttr": "imdb_id",
                "title": "View on IMDB",
                "size": {
                  "width": 0,
                  "height": 0
                },
                "image": "https://icon-library.com/images/imdb-icon/imdb-icon-0.jpg",
                "action": {
                  "id": "click4siteMovie",
                  "event": {
                    "type": "opensite",
                    "url": "https://www.imdb.com/title/${imdb_id}/"
