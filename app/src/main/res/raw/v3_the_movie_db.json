        },
        {
          "name" : "Posters",
          "itemView" : {
            "id" : "posters.grid",
            "type": "list",
            "orientation": "grid",
            "mapping": "images.posters",
            "itemView": {
              "type": "image",
              "url": "https://image.tmdb.org/t/p/w200${file_path}",
              "originalUrl" : "https://image.tmdb.org/t/p/original${file_path}"
            }
          }
        },
        {
          "name": "Similar content",
          "itemView": {
            "id": "idTab03",
            "initData": {
              "type": "rest",
              "url": "https://api.themoviedb.org/3/movie/${id}/similar?api_key=0bfaf3c0640773566cb7692affcae335"
            },
            "type": "layout",
            "views": [
              {
                "id": "movie_list"
              }
            ]
          }
        }
      ]
    },
    {
