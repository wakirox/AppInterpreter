{
  "name": "THE MOVIE DB",
  "version": "beta.1",
  "author": "Marius Gabriel Magadan",
  "changelog": "Implemented a series of endpoint calls from the movie db.\nIf you find any problem send me an email at:\nwakirox@gmail.com with a description and possibly a screenshot of the problem.",
  "params": {
    "apiToken": "0bfaf3c0640773566cb7692affcae335",
    "apiTokenName": "api_key"
  },
  "searchable": {
    "hint": "Search everything",
    "name": "Search",
    "event": {
      "url": "https://api.themoviedb.org/3/search/multi?query=${query}",
      "method": "get",
      "thenDo": {
        "type": "show",
        "view": {
          "id": "multi_list"
        }
      }
    }
  },
  "mainView": {
    "id": "l0",
    "type": "layout",
    "views": [
      {
        "type": "text",
        "label": "Popular movies",
        "title": "click for detail",
        "action": {
          "id": "show_featured_movies"
        }
      },
      {
        "type": "list",
        "orientation": "horizontal",
        "initData": {
          "type": "rest",
          "paginated": {
            "pageMapping": "page",
            "totalPageMapping": "total_pages"
          },
          "url": "https://api.themoviedb.org/3/discover/movie?sort_by=popularity.desc"
        },
        "mapping": "results",
        "action": {
          "id": "list_click"
        },
        "itemView": {
          "id": "movie_list_featured_main",
          "type": "layout",
          "orientation": "vertical",
          "views": [
            {
              "type": "image",
              "url": "https://image.tmdb.org/t/p/w500${poster_path}",
              "size": {
                "width": 140,
                "height": 200
              },
              "action": {
                "id": "list_click"
              }
            },
            {
              "type": "text",
              "size": {
                "width": 140,
                "height": 45
              },
              "title": "${title}"
            }
          ]
        }
      },
      {
        "type": "text",
        "label": "Popular people"
      },
      {
        "type": "list",
        "orientation": "horizontal",
        "initData": {
          "type": "rest",
          "paginated": {
            "pageMapping": "page",
            "totalPageMapping": "total_pages"
          },
          "url": "https://api.themoviedb.org/3/person/popular"
        },
        "mapping": "results",
        "action": {
          "id": "show_actor_detail"
        },
        "itemView": {
          "id": "movie_list_actor_mini",
          "type": "layout",
          "orientation": "vertical",
          "views": [
            {
              "type": "image",
              "url": "https://image.tmdb.org/t/p/w500${profile_path}",
              "size": {
                "width": 94,
                "height": 140
              },
              "action": {
                "id": "show_actor_detail"
              }
            },
            {
              "size": {
                "width": 94,
                "height": 45
              },
              "type": "text",
              "title": "${name}"
            }
          ]
        }
      },
      {
        "type": "text",
        "label": "Let's talk about TMDb",
        "title": "The Movie Database (TMDb) is a community built movie and TV database. Every piece of data has been added by our amazing community dating back to 2008. TMDb's strong international focus and breadth of data is largely unmatched and something we're incredibly proud of. Put simply, we live and breathe community and that's precisely what makes us different.\nhttps://www.themoviedb.org/\n"
      }
    ]
  },
  "views": [
    {
      "id": "detail_screen_tab",
      "type": "pager",
      "tabs": [
        {
          "name": "Overview",
          "itemView": {
            "id": "idTab02",
