                  },
                  {
                    "type": "layout",
                    "id" : "layout.last_episode_to_air",
                    "hideIfAttr": "last_episode_to_air",
                    "views": [
                      {
                        "type": "text",
                        "label": "Last episode"
                      },
                      {
                        "type": "layout",
                        "orientation": "horizontal",
                        "views": [
                          {
                            "type": "image",
                            "url": "https://image.tmdb.org/t/p/w500${last_episode_to_air.still_path}",
                            "size": {
                              "width": 80,
                              "height": 120
                            }
                          },
                          {
                            "type": "text",
                            "label": "E${last_episode_to_air.episode_number}S${last_episode_to_air.season_number} - ${last_episode_to_air.name}",
                            "title": "Air date ${last_episode_to_air.air_date}\nOverview ${last_episode_to_air.overview}"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "layout",
                    "hideIfAttr": "next_episode_to_air",
                    "views": [
                      {
                        "type": "text",
                        "label": "Next episode"
                      },
                      {
                        "type": "layout",
                        "orientation": "horizontal",
                        "views": [
                          {
                            "type": "image",
                            "url": "https://image.tmdb.org/t/p/w500${next_episode_to_air.still_path}",
                            "size": {
                              "width": 80,
                              "height": 120
                            }
                          },
                          {
                            "type": "text",
                            "label": "E${next_episode_to_air.episode_number}S${next_episode_to_air.season_number} - ${next_episode_to_air.name}",
                            "title": "Air date ${next_episode_to_air.air_date}\nOverview ${next_episode_to_air.overview}"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "text",
                    "label": "Production companies"
                  },
                  {
                    "type": "list",
                    "orientation": "horizontal",
                    "mapping": "production_companies",
                    "itemView": {
                      "type": "text",
                      "mapping": "name"
                    }
                  },
                  {
                    "type": "text",
                    "title": "\nData taken from themoviedb.org"
                  }
                ]
              }
            ]
          }
        },
        {
          "name" : "Cast",
          "itemView" : {
            "id" : "cast.list.grid?",
            "type": "list",
            "orientation" : "grid",
            "mapping": "credits.cast",
            "itemView": {
              "id": "cast"
            }
          }
        },
        {
          "name" : "Crew",
          "itemView" : {
